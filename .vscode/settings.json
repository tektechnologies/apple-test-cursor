{
  // Swift and iOS Development Settings
  "swift.path": "/usr/bin/swift",
  "swift.buildPath": "./build",
  "swift.targetBuildPath": "./build",
  
  // File Associations
  "files.associations": {
    "*.swift": "swift",
    "*.h": "objective-c",
    "*.m": "objective-c",
    "*.mm": "objective-c",
    "*.plist": "xml",
    "*.storyboard": "xml",
    "*.xib": "xml",
    "*.xcassets": "json"
  },
  
  // Editor Settings
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.rulers": [120],
  "editor.wordWrap": "bounded",
  "editor.wordWrapColumn": 120,
  
  // Auto Save
  "files.autoSave": "onFocusChange",
  
  // Exclude Patterns for iOS
  "files.exclude": {
    "**/build": true,
    "**/DerivedData": true,
    "**/.DS_Store": true,
    "**/xcuserdata": true,
    "**/*.xcworkspace/xcuserdata": true,
    "**/*.xcodeproj/xcuserdata": true,
    "**/Pods": true,
    "**/Carthage": true
  },
  
  // Search Exclude Patterns
  "search.exclude": {
    "**/build": true,
    "**/DerivedData": true,
    "**/Pods": true,
    "**/Carthage": true,
    "**/node_modules": true
  },
  
  // Git Settings
  "git.enableSmartCommit": true,
  "git.autofetch": true,
  "git.confirmSync": false,
  
  // Terminal Settings
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.env.osx": {
    "PATH": "/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin:/Applications/Xcode.app/Contents/Developer/usr/bin"
  },
  
  // iOS Simulator Integration
  "ios-debug.simulatorPath": "/Applications/Xcode.app/Contents/Developer/Applications/Simulator.app",
  
  // Code Formatting
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,
  
  // Swift Formatting
  "swift.format.enable": true,
  "swift.format.path": "/usr/local/bin/swift-format",
  
  // IntelliSense
  "typescript.suggest.autoImports": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  
  // File Explorer
  "explorer.sortOrder": "type",
  "explorer.compactFolders": false,
  
  // Minimap
  "editor.minimap.enabled": true,
  "editor.minimap.maxColumn": 120,
  
  // Bracket Pair Colorization
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  
  // Auto Save Delay
  "files.autoSaveDelay": 1000,
  
  // Tab Completion
  "editor.tabCompletion": "on",
  
  // Word Based Suggestions
  "editor.wordBasedSuggestions": "on",
  
  // Parameter Hints
  "editor.parameterHints.enabled": true,
  
  // Suggest on Trigger Characters
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": true
  }
} 